<link rel="stylesheet" href="/styles/detalhe.css"> 
 <div class="body"><br><br>
  <div class="papper">
    <div class="back-button">
            <a href="/receitas"><img src="data:image/png;base64,"></a>
          </div>
  <div class="mg">
    <br>
  <h1><%= receita.titulo %></h1>
  <p><span>Receita criada em: </span> <%= formatDate(receita.data_criacao) %></p>
  <br>
  <div class="img">
  <img src="/images/<%= receita.imagem %>" class="img-fluid" alt="Imagem da Receita"></div>
  <br>
  <br>
  <strong>Ingredientes:</strong>
  <br><br>
  <ul>
    <% const ingredientes = typeof receita.ingredientes === 'string' ? receita.ingredientes.split('\n') : []; %>
    <% for (let i = 0; i < ingredientes.length; i++) { %>
      <li>
        <%- ingredientes[i] %>
      </li>
    <% } %>
  </ul>
  <br>
  <br>
  <p><strong>Modo de Preparo:</strong></p>
  <br>
  <ol>
    <% const modoPreparoItems = typeof receita.modo_preparo === 'string' ? receita.modo_preparo.split('\n') : []; %>
    <% for (let i = 0; i < modoPreparoItems.length; i++) { %>
      <li><%- modoPreparoItems[i] %></li>  <br>
    <% } %>
  </ol>
  <br>  <br>  <br>
<div class="btnss">
  <form action="/receitas/receita/<%= receita.id %>/excluir" method="post">
    <button class="btn bg-custom btn-block" type="submit">Excluir Receita</button>
  </form>
  <button class="btn bg-custom btn-block" type="submit"><a href="/receitas/receita/editar/<%= receita.id %>">Editar Receita</a></button></div><br>
  <% function formatDate(dateString) {
    const options = { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' };
    const date = new Date(dateString);
    return date.toLocaleDateString('pt-BR', options);
  } %> 
</div>
</div>  <br>  <br></div>