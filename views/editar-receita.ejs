<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<link rel="stylesheet" href="/styles/criar.css">

<body class="body">

  <h1>Editar Receita</h1>
  <br>
  <div class="papper">
    <div class="back-button">
      <a href="/receitas/receita/<%= receita.id %>"><img
          src="data:image/png;base64,"></a>
    </div>

    <br><br>
    <form action="/receitas/receita/editar/<%= receita.id %>" class="meio" method="post" enctype="multipart/form-data">

      <label>Título:</label>
      <div class="input-field col s6">
        <input type="text" id="titulo" name="titulo" class="validate " value="<%= receita.titulo %>">
      </div>

      <label>Ingredientes:</label>
      <div class="input-field col s12">
        <textarea id="ingredientes" name="ingredientes" rows="4"
          class="materialize-textarea"><%= receita.ingredientes %></textarea>
      </div>

      <label>Modo de Preparo:</label>
      <div class="input-field col s12">
        <textarea id="modo_preparo" name="modo_preparo" rows="4"
          class="materialize-textarea"><%= receita.modo_preparo %></textarea>
      </div>

      <label>Tempo de Preparo</label>
      <div class="input-field col s6">
        <input type="time" name="tempo_preparo" value="<%= receita.tempo_preparo %>">
      </div>


      <label>Descrição da Receita:</label>
      <div class="input-field col s12">
        <textarea id="descricao" name="descricao" rows="4"
          class="materialize-textarea"><%= receita.descricao %></textarea>
      </div>

      <div class="input-group mb-3">
        <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon03"><i id="i"
            class="material-icons">perm_media</i></button>
        <input class="form-control" type="file" name="imagem" accept="image/*" id="inputGroupFile03"
          aria-describedby="inputGroupFileAddon03" aria-label="Upload">
      </div>
      <br>
      <img src="/images/<%= receita.imagem %>" alt="Imagem da Receita" style="width: 300px; height: auto;">
      <br><br>
      <button class="btn bg-custom btn-block" type="submit">Salvar Edição</button>
      <br><br>
    </form>



  </div>
  <br><br>
</body>