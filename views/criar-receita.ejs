
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<link rel="stylesheet" href="/styles/criar.css"> 
 <div class="body">
        
        <br>
    <h1>Criar Receita</h1>
<br>
    <div class="papper">
        <div class="back-button">
                <a href="/receitas"><img src="data:image/png;base64,"></a>
              </div>
    <form action="/receitas/criar-receita" method="post" enctype="multipart/form-data">

<br><br>
  <label for="Titulo da receita">Titulo da receita</label>
        <div class="input-field col s6">
        <input  placeholder="Exemplo: bolo" id="titulo" type="text" name="titulo" required class="validate ">
              
              </div>



<label  for="ingredientes">Ingredientes</label>
<div class="input-field col s12"> 
        
        <textarea placeholder="Para separar os ingredientes clique enter" id="ingredientes" name="ingredientes"  required class="materialize-textarea"></textarea>
       
      </div>

<label for="modoPreparo">Modo de preparo</label>
<div class="input-field col s12">
        <textarea placeholder="Para separar em etapas clique enter" id="modoPreparo" name="modo_preparo" required class="materialize-textarea"></textarea>
        
      </div>

<label for="descricao">Descrição da Receita:</label>
<div class="input-field col s12">
<textarea placeholder="Uma breve descrição" id="descricao" name="descricao" class="materialize-textarea"></textarea>

</div>


    <div class="file-field  input-field">
      <div class="btn">
        <div class="file-field input-field">
                <i class="material-icons">perm_media</i>
        <input type="file"  id="imagem" name="imagem" accept="image/*" ></div>
      </div>

      <div class="file-path-wrapper">
        <input class="file-path validate" placeholder="Imagem da receita" type="text">
      </div>
</div>


<br><br> <div class="meio">


<button class="btn bg-custom btn-block" type="submit">Salvar</button>
      </div>  <br>
       
      </form>
</div><br><br>
</div>