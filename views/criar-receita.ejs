<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<link rel="stylesheet" href="/styles/criar.css">

<body class="body">



  <h1>Criar Receita</h1>

  <br>


  <div class="papper">
    <% if (flash.erro) { %>
      <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show text-center"
        id="error-message" role="alert">
        <i class="material-icons">error</i>
        <div>
          <%= flash.erro %>
        </div>
      </div>
      <% } %>
        <div class="back-button">
          <a href="/receitas"><img
              src="data:image/png;base64,"></a>
        </div>
        <form action="/receitas/criar-receita" method="post" enctype="multipart/form-data">

          <br><br>


          <label>Titulo da receita</label>
          <div class="input-field col s6">
            <input placeholder="Exemplo: bolo" id="titulo" type="text" name="titulo" required class="validate ">

          </div>



          <label>Ingredientes</label>
          <div class="input-field col s12">

            <textarea placeholder="Para separar os ingredientes clique enter" id="ingredientes" name="ingredientes"
              required class="materialize-textarea"></textarea>

          </div>

          <label>Modo de preparo</label>
          <div class="input-field col s12">
            <textarea placeholder="Para separar em etapas clique enter" id="modoPreparo" name="modo_preparo" required
              class="materialize-textarea"></textarea>

          </div>

          <label>Tempo de Preparo</label>
          <div class="input-field col s6">
            <input placeholder="Exemplo: 30" id="tempoPreparo" type="time" name="tempo_preparo" required
              class="validate">
          </div>

          <label>Descrição da Receita:</label>
          <div class="input-field col s12">
            <textarea placeholder="Uma breve descrição" id="descricao" name="descricao"
              class="materialize-textarea"></textarea>

          </div>


          <div class="input-group mb-3">
            <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon03"><i id="i"
                class="material-icons">perm_media</i></button>
            <input class="form-control" type="file" name="imagem" accept="image/*" id="inputGroupFile03"
              aria-describedby="inputGroupFileAddon03" aria-label="Upload">
          </div>


          <br><br>
          <div class="meio">


            <button class="btn bg-custom btn-block text-center" type="submit">Salvar</button>
          </div> <br><br>

        </form>
  </div><br><br>

</body>
<script>

  function hideErrorMessage() {
    var errorMessage = document.getElementById('error-message');
    if (errorMessage) {
      setTimeout(function () {
        errorMessage.style.display = 'none';
        errorMessage.style.visibility = 'hidden';
        errorMessage.style.padding = 0;
        errorMessage.classList.remove('show');
      }, 6000);
    }
  }
  document.addEventListener('DOMContentLoaded', hideErrorMessage);
</script>